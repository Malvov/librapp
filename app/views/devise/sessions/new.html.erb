<div style="
      width: 80%;
      margin-left: 10%;"
>
  <div class="card" style="
      width: 70%;
      margin-left: 10%;
      margin-top: 18%;"
  >
    <div class="content">
      <div class="container-90">
        <h2 class="text-center title">Iniciar Sesión</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login' }) do |f| %>
          <div class="form-inputs">
            <%= f.input :login, required: false, autofocus: true, label: false, placeholder: 'Nombre de Usuario' %>
            <%= f.input :password, required: false, label: false, placeholder: 'Contraseña' %>
            <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Log in' %>
          </div>
        <% end %>
        <div class="login-links">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
